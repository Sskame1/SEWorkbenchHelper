<Window x:Class="SEWorkbenchHelper.ProjectSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEWorkbenchHelper"
        mc:Ignorable="d"
        Title="Select Project"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFE81123"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Space Engineers Workbench Helper"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="#333333"/>

        <!-- Projects List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProjectsList" ItemsSource="{Binding Projects}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,15"
                                Background="White"
                                CornerRadius="4"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="300"/>
                                </Grid.ColumnDefinitions>

                                <!-- Project Info -->
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#0078D7"/>

                                    <TextBlock Text="{Binding Author}"
                                               Margin="0,5,0,0"
                                               Foreground="#666666"/>

                                    <TextBlock Text="{Binding Description}"
                                               Margin="0,10,0,0"
                                               TextWrapping="Wrap"
                                               Foreground="#333333"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                        <Button Content="Open Project"
                                                Width="120"
                                                HorizontalAlignment="Left"
                                                Click="OpenProject_Click"
                                                Tag="{Binding}"
                                                Margin="0,0,10,0"/>

                                        <Button Content="Delete"
                                                Style="{StaticResource DeleteButtonStyle}"
                                                Click="DeleteProject_Click"
                                                Tag="{Binding}"/>       
                                    </StackPanel>
                                </StackPanel>

                                <!-- Project Preview -->
                                <Border Grid.Column="1"
                                        Margin="10,0,0,0"
                                        Background="#FAFAFA"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Padding="10"
                                        CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock Text="Project Structure:"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,5"/>

                                        <ItemsControl ItemsSource="{Binding Files}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                               Margin="5,2"
                                                               Foreground="#555555"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock Text="{Binding Version}"
                                                   Margin="0,10,0,0"
                                                   FontStyle="Italic"
                                                   Foreground="#888888"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="New Project"
                    Width="120"
                    Height="30"
                    Click="NewProject_Click"/>
        </StackPanel>
    </Grid>
</Window>